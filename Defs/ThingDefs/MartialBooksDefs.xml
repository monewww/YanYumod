<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--//////book base-->
  <ThingDef Name="YanYu_MartialBookBase" Abstract="True">
    <thingClass>ThingWithComps</thingClass>
    <graphicData>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <drawGUIOverlay>true</drawGUIOverlay>
    <altitudeLayer>Item</altitudeLayer>
    <drawerType>MapMeshOnly</drawerType>
    <rotatable>false</rotatable>
    <statBases>
      <MaxHitPoints>10</MaxHitPoints>
      <Mass>0.2</Mass>
      <Flammability>0.5</Flammability>
    </statBases>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <alwaysHaulable>true</alwaysHaulable>
    <stackLimit>20</stackLimit>
    <selectable>true</selectable>
    <pathCost>14</pathCost>
    <category>Item</category>
    <comps>
      <li Class="CompProperties_Usable">
        <useJob>UseItem</useJob>
        <useLabel>Use {0}</useLabel>
      </li>
      <li Class="CompProperties_Forbiddable" />
    </comps>
    <tradeability>Buyable</tradeability>
    <tradeTags Inherit="false">
      <li>YanYu_MartialBooks</li>
    </tradeTags>
  </ThingDef>
  
  <!--BasicSwordsmanship-->
  <ThingDef Name = "BasicSwordsmanship" ParentName="YanYu_MartialBookBase">
    <defName>YanYu_Martial_BasicSwordsmanship</defName>
    <label>Basic Swordsmanship Book</label>
    <description>A book that teaches the basics of swordsmanship.</description>
    <graphicData>
      <texPath>YanYu_item/YanYu_Books/Martial/MartialBook_A</texPath>
      <drawSize>(1.0, 1.0)</drawSize>
    </graphicData>
    <statBases>
      <MarketValue>500</MarketValue>
      <Beauty>5</Beauty>
    </statBases>
    <comps>
      <li Class= "YanYu.ThingCompProperties_UseMartialbook">
        <uniqueMartial>False</uniqueMartial>
        <giveHediffDef>YanYu_MartialHediff_BasicSwordsmanship</giveHediffDef>
        <martialName>BasicSwordsmanship</martialName>
      </li>
    </comps>
  </ThingDef>
  
